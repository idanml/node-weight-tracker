pipeline {
    agent {label 'SlaveVm1'}
	environment {
        USER_CREDENTIALS = credentials('user_pass')
    }
    stages {
		stage('build image') {
			steps {
                sh 'sudo docker build -t WTA:latest .'
			}
        }		
    }
	post {
		success {
			sh 'docker login -u $USER_CREDENTIALS_USR --password $USER_CREDENTIALS_PSW'
			sh 'docker push $USER_CREDENTIALS_USR/weight-tracker:latest'
		}
		failure {
            sh 'echo "CI pipline has been failed "'
        }
	}	
}